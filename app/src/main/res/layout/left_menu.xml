<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <!-- 真正使用的时候用多个listview类型的item实现列表 -->
    <!--<ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_icon"/>-->
    <RelativeLayout
        android:id="@+id/rl_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/click_color"><!-- RelativeLayout 点击事件变换背景颜色-->
        <ImageView
            android:id="@+id/icon0"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/app_icon"/>

        <TextView
            android:id="@+id/left_tv0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:layout_toRightOf="@id/icon0"
            android:layout_centerVertical="true"
            android:text="彩票充值"
            android:textColor="#000"
            android:textSize="15sp" />
    </RelativeLayout>
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_background"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#DAD8D8"/>
    <RelativeLayout
        android:id="@+id/rl_background1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:background="@drawable/click_color">
        <ImageView
            android:id="@+id/icon1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/app_icon"/>

        <TextView
            android:id="@+id/left_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/icon1"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="彩票大厅"
            android:textColor="#000"
            android:textSize="15sp" />
    </RelativeLayout>
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_background1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#DAD8D8"/>
    <RelativeLayout
        android:id="@+id/rl_background2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:background="@drawable/click_color">
        <ImageView
            android:id="@+id/icon2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/app_icon"/>

        <TextView
            android:id="@+id/left_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:layout_toRightOf="@id/icon2"
            android:layout_centerVertical="true"
            android:text="中奖用户"
            android:textColor="#000"
            android:textSize="15sp" />
    </RelativeLayout>
    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_background2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#DAD8D8"/>
    <RelativeLayout
        android:id="@+id/rl_background3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line3"
        android:background="@drawable/click_color">
        <ImageView
            android:id="@+id/icon3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/app_icon"/>

        <TextView
            android:id="@+id/left_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:text="退出登录"
            android:layout_toRightOf="@id/icon3"
            android:textColor="#000"
            android:textSize="15sp" />
    </RelativeLayout>
   <!-- <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_below="@id/rl_background3"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="1dp"
        android:background="#DAD8D8"/>-->
</RelativeLayout>